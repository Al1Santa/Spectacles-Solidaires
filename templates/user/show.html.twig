{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div id="container"> 
        <div id="body_title">
            <h1>Utilisateur</h1>
        </div>
        <div id="body_create">
            <a href="{{ path('app_user_index') }}">back to list</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
        </div>

        <div id="body_table">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ user.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Lastname</th>
                        <td>{{ user.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Avatar</th>
                        <td>{{ user.avatar }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
