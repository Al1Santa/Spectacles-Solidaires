{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
 <div id="container"> 

        <div id="body_title">
            <h1>Category index</h1>
        </div>

        <div id="body_create">
            <a href="{{ path('app_category_new') }}">nouvelle Cat√©gorie</a>
        </div>

            <div id="body_table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                                <a href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
</div>

        
{% endblock %}
