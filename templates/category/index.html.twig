{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div id="container"> 
        <div id="body_title">
            <h1>Liste des catégories</h1>
        </div>
            {# 
                to access information from the application
                we have at our disposal the variable 'app'
                and for flashMessage has a method flashes('type')
                we said it was an array, so we can loop over it
                #}
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
        <div id="body_create">
            <a href="{{ path('app_category_new') }}">Nouvelle Catégorie</a>
        </div>

        <div id="body_table">
            <table class="table">
                <thead>
                    <tr>     
                        <th>Nom</th>          
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn-actions">Voir</a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn-actions">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>      
{% endblock %}
