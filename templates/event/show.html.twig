{% extends 'base.html.twig' %}

{% block title %}Evènement{% endblock %}

{% block body %}
    <div id="container"> 
        <div id="body_title">
            <h1>Evènement</h1>
        </div>
        <div id="body_create">
            <a href="{{ path('app_event_index') }}">retour</a>
            <a href="{{ path('app_event_edit', {'id': event.id}) }}">modifier</a>
        </div>

        <div id="body_table">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ event.title }}</td>
                    </tr>
                    <tr>
                        <th>Contenu 1</th>
                        <td>{{ event.content }}</td>
                    </tr>
                    <tr>
                        <th>Contenu 2</th>
                        <td>{{ event.content2 }}</td>
                    </tr>
                    <tr>
                        <th>Lien de la vidéo</th>
                        <td>{{ event.linkVideo }}</td>
                    </tr>
                    <tr>
                        <th>Lien de la bande sonore</th>
                        <td>{{ event.linkSound }}</td>
                    </tr>
                    <tr>
                        <th>Photo 1</th>
                        <td>{{ event.picture1 }}</td>
                    </tr>
                    <tr>
                        <th>Photo 2</th>
                        <td>{{ event.picture2 }}</td>
                    </tr>
                    <tr>
                        <th>Photo 3</th>
                        <td>{{ event.picture3 }}</td>
                    </tr>
                    <tr>
                        <th>Temps du spectacle</th>
                        <td>{{ event.time ? event.time|date('H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Age</th>
                        <td>{{ event.age }}</td>
                    </tr>
                    <tr>
                        <th>Technique 1</th>
                        <td>{{ event.technique1 }}</td>     
                    </th>               
                    <tr>
                        <th>Technique 2</th>
                        <td>{{ event.technique2 }}</td>     
                    </th>               
                    <tr>
                        <th>Technique 3</th>
                        <td>{{ event.technique3 }}</td>     
                    </th>               
                    <tr>
                        <th>Bonus 1</th>
                        <td>{{ event.bonus1 }}</td>     
                    </th>               
                     <tr>
                        <th>Bonus 2</th>
                        <td>{{ event.bonus2 }}</td>     
                    </th>              
                </tbody>
            </table>
            {{ include('event/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
