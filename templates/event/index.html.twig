{% extends 'base.html.twig' %}

{% block title %}Liste des évènement{% endblock %}

{% block body %}
    <div id="container"> 
        <div id="body_title">
            <h1>Liste des évènements</h1>
        </div>
                {# 
            pour acceder a des infos venant de l'application
            on a à notre dsposition la variable 'app'
            et pour les flashMessage a une méthode flashes('type')
            on a dit que c'était un tableau, on peut donc boucler dessus
            #}
            {% for message in app.flashes('notice') %}
                <div class="alert alert-success" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        <div id="body_create">
            <a href="{{ path('app_event_new') }}">nouvel évènement</a>
        </div>
    
        <div id="body_table">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Content</th>
                        <th>Content 2</th>
                        <th>Link_video</th>
                        <th>Link_sound</th>
                        <th>Picture_1</th>
                        <th>Picture_2</th>
                        <th>Picture_3</th>
                        <th>Time</th>
                        <th>Age</th>
                        <th>Technique 1</th>
                        <th>Technique 2</th>
                        <th>Technique 3</th>
                        <th>Bonus 1</th>
                        <th>Bonus 2</th>
                    </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.id }}</td>
                    
                        <td>{{ event.title }}</td>
                        <td>{{ event.content }}</td>
                        <td>{{ event.content2 }}</td>
                        <td>{{ event.linkVideo }}</td>
                        <td>{{ event.linkSound }}</td>
                        <td>{{ event.picture1 }}</td>
                        <td>{{ event.picture2 }}</td>
                        <td>{{ event.picture3 }}</td>
                        <td>{{ event.time ? event.time|date('H:i:s') : '' }}</td>
                        <td>{{ event.age }}</td>
                        <td>{{ event.technique1}}</td>
                        <td>{{ event.technique2 }}</td>
                        <td>{{ event.technique3 }}</td>
                        <td>{{ event.bonus1 }}</td>
                        <td>{{ event.bonus2 }}</td>
                        <td>
                            <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                            <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="11">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
